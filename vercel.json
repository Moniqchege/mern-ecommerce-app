{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/login", "dest": "/" },
    { "src": "/forgot-password", "dest": "/" },
    { "src": "/sign-up", "dest": "/" },
    { "src": "/product-category", "dest": "/" },
    { "src": "/product/:id", "dest": "/" },
    { "src": "/cart", "dest": "/" },
    { "src": "/search", "dest": "/" },
    { "src": "/admin-panel", "dest": "/" },
    { "src": "/admin-panel/all-users", "dest": "/" },
    { "src": "/admin-panel/all-products", "dest": "/" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
